<h1 class="big">Meet the Herd</h1>

<ul class="list">
  <% @horses.each do |horse| %>
    <%= erb :"/horses/_horse", layout: false, locals: { horse: horse } %>
  <% end %>
</ul>

<form class="flex flex-column" method="GET" action="/horses/new">
  <button type="submit" class="button dark">Add a Horse</button>
</form>
